<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    tools:context=".Menu">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="331dp"
        android:layout_height="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#0E5187"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="342dp"
        android:layout_height="305dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.12"
        app:srcCompat="@drawable/menu2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circular"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="70dp"
                android:gravity="bottom"
                android:text="Menu"
                android:textColor="#009688"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnprincipal"
                android:layout_width="56dp"
                android:layout_height="60dp"
                android:layout_marginLeft="-51dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/principal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circular"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="70dp"
                android:gravity="bottom"
                android:text="Solicitud"
                android:textColor="#009688"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnsolicitud"
                android:layout_width="56dp"
                android:layout_height="60dp"
                android:layout_marginLeft="-56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/nota" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circular"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="70dp"
                android:gravity="bottom"
                android:text="Cliente"
                android:textColor="#009688"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btncliente"
                android:layout_width="56dp"
                android:layout_height="60dp"
                android:layout_marginLeft="-48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cliente" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>